<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">

    </style>

    <style name="AppTheme.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Main.ActionBar" parent="Theme.AppCompat.Light">

    </style>

    <style name="BottomMenuActiveText">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>


    <style name="BottomMenuInactiveText">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@string/font_family_normal</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@string/font_family_black</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>

    <style name="Text.Date">
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>
</resources>
